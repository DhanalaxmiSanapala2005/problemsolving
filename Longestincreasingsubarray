class Solution {
  public:
    // Function to find the length of longest increasing subarray
    int lenOfLongIncSubArr(vector<int> &arr) 
    {
        int n=arr.size();
        int currlen=1;
        int maxlen=1;
          for(int i=1;i<n;i++)
          {
              if(arr[i]>arr[i-1])
              {
                  currlen++;
                  maxlen=max(maxlen,currlen);
              }
              else
              {
                  currlen=1;
              }
         }
        return maxlen;
    }
};
