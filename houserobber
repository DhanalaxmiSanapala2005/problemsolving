class Solution {
public:
    int maximizeMoney(int n, int k) {
        if (n == 0) return 0;
        if (n == 1) return k;

        vector<int> dp(n + 1, 0);
        dp[1] = k;

        for (int i = 2; i <= n; i++) {
            dp[i] = max(dp[i - 1], k + dp[i - 2]);
        }

        return dp[n];
    }
};
