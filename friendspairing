class Solution {
  public:
    int countFriendsPairings(int n) 
    {
        if(n==0)
        return 0;
      if(n==1)
      return 1;
      if(n==2)
      return 2;
      long long dp[n];
    
      dp[1]=1;
      dp[2]=2;
      for(int i=3;i<=n;i++)
      {
          dp[i]=dp[i-1]+(i-1)*dp[i-2];
      }
    
    return dp[n];
    }
};
