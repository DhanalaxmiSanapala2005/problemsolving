class Solution 
{
 public:
    int maximumSumSubarray (vector<int>&arr,int k)
    {
        int cursum=0;
        for(int i=0;i<k;i++)
        {
            cursum+=arr[i];
        }
        int winsum=cursum;
        for(int i=k;i<arr.size();i++)
        {
            winsum+=arr[i]-arr[i-k];
            cursum=max(winsum,cursum);
        }
    return cursum;
    }
  
};
